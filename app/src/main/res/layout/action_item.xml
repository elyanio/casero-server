<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/action_card"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        card_view:cardCornerRadius="10dp"
                                        card_view:cardElevation="5dp"
                                        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_action_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Owner Petition"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/item_action_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_action_name"
                android:layout_below="@+id/item_action_name"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="2017/08/20"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_action_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_action_date"
                android:layout_below="@+id/item_action_date"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Pending"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/item_action_delete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_above="@+id/item_action_date"
                android:layout_alignEnd="@+id/item_action_name"
                android:src="@drawable/ic_clear_black_24dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>